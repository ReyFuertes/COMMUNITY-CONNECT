{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ReverseProxy": {
    "Routes": {
      "users-route": {
        "ClusterId": "users-cluster",
        "Match": {
          "Path": "/users/{**catch-all}"
        },
        "Transforms": [
          {
            "PathPattern": "{**catch-all}"
          }
        ]
      },
      "posts-route": {
        "ClusterId": "posts-cluster",
        "Match": {
          "Path": "/posts/{**catch-all}"
        },
        "Transforms": [
          {
            "PathPattern": "{**catch-all}"
          }
        ]
      },
      "userandunitmanagement-route": {
        "ClusterId": "userandunitmanagement-cluster",
        "Match": {
          "Path": "/userandunitmanagement/{**catch-all}"
        },
        "Transforms": [
          {
            "PathPattern": "{**catch-all}"
          }
        ]
      },
      "auth-route": {
        "ClusterId": "userandunitmanagement-cluster",
        "Match": {
          "Path": "/api/Auth/{**catch-all}"
        },
        "Transforms": [
          {
            "PathPattern": "/api/Auth/{**catch-all}"
          }
        ]
      },
      "communicationhub-route": {
        "ClusterId": "communicationhub-cluster",
        "Match": {
          "Path": "/api/communication/{**catch-all}"
        },
        "Transforms": [
          {
            "PathPattern": "/{**catch-all}"
          }
        ]
      },
      "communicationhub-sockets-route": {
        "ClusterId": "communicationhub-cluster",
        "Match": {
          "Path": "/hubs/communication/{**catch-all}"
        },
        "Transforms": [
          {
            "PathPattern": "/hubs/communication/{**catch-all}"
          }
        ]
      }
    },
    "Clusters": {
      "users-cluster": {
        "Destinations": {
          "users-service": {
            "Address": "http://localhost:8081"
          }
        }
      },
      "posts-cluster": {
        "Destinations": {
          "posts-service": {
            "Address": "http://localhost:8081"
          }
        }
      },
      "userandunitmanagement-cluster": {
        "Destinations": {
          "userandunitmanagement-service": {
            "Address": "http://communityconnect-userandunitmgmtapi-dev:8081"
          }
        } 
      },
      "communicationhub-cluster": {
        "Destinations": {
          "communicationhub-service": {
            "Address": "http://communityconnect-communicationhub-api-dev:8082"
          }
        }
      }
    }
  }
}
